<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/protectionFragment">

    <Button
        android:text="View Alert History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alertsHistoryButton"
        android:layout_margin="16dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Entry Access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accessButton"
        android:layout_below="@+id/alertsHistoryButton"
        android:layout_alignStart="@+id/alertsHistoryButton"
        android:layout_alignEnd="@+id/alertsHistoryButton" />

    <Button
        android:text="View rooms"
        android:layout_height="wrap_content"
        android:id="@+id/viewRoomButton"
        android:layout_width="match_parent"
        android:layout_above="@+id/alertsHistoryButton"
        android:layout_alignStart="@+id/alertsHistoryButton"
        android:layout_alignEnd="@+id/alertsHistoryButton" />

</RelativeLayout>
