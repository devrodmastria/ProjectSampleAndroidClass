<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wmschane.projectsample.TempFragment"
    android:baselineAligned="false">
    
    <TextView
        android:text="Temperature Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <Button
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="212dp" />

    <Button
        android:text="-"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/TempMinus"
        android:layout_alignBottom="@+id/button6"
        android:layout_toStartOf="@+id/button6"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="70dp" />

    <Button
        android:text="+"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/TempPlus"
        android:layout_alignBaseline="@+id/TempMinus"
        android:layout_alignBottom="@+id/TempMinus"
        android:layout_toEndOf="@+id/button6" />

    <EditText
        android:id="@+id/TempDegree"
        android:labelFor="@+id/TempDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TempPlus"
        android:layout_centerHorizontal="true"
        android:ems="3"
        android:inputType="number"
        android:text="75.0"
        android:textAlignment="center" />

</RelativeLayout>